#!/bin/bash

# rust
rustup self update
rustup update
rustup install nightly
rustup default nightly
rustup component add rls
rustup component add rust-analysis
rustup component add rust-src
rustup component add rustfmt
rustup component add clippy
rustup completions zsh > ~/.zfunc/_rustup

cargo +nightly install racer
cargo install cargo-update

# elm
brew install elm
brew install node

# haskell
curl -sSL https://get.haskellstack.org/ | sh
stack install apply-refact hlint stylish-haskell hasktags hoogle hindent

# go
go get -u github.com/golang/dep/cmd/dep
go get -u github.com/derekparker/delve/cmd/dlv

# python
brew install pyenv
brew install pyenv-virtualenv

pyenv install 3.7.1
pyenv install 2.7.15

pyenv global 3.7.1 2.7.15
pip3 install pynvim
pip3 install flake8
pip3 install yapf
pip3 install autoflake
pip3 install isort
pip3 install python-language-server
pip3 install black
pip2 install pynvim
pip2 install flake8
pip2 install yapf
pip2 install autoflake
pip2 install isort
pip2 install python-language-server
pip2 install black

# ruby
brew install rbenv
brew install ruby-build

brew install cquery
brew install lua
brew install node
brew install gauche
brew install minimal-racket
brew install Caskroom/cask/dotnet

# scheme racket 
raco pkg install drracket

# jvm familiy
curl -s "https://get.sdkman.io" | bash
brew install clojure
brew install shyiko/ktlint/ktlint
brew install scalastyle
sdk install sbt
brew install Cask
cask upgrade-cask

# yarn
curl -o -L https://yarnpkg.com/install.sh | bash
yarn global add vscode-html-languageserver-bin typescript typescript-language-server
yarn global add prettier
