#!/bin/bash

# rust
rustup self update
rustup update
rustup install nightly
rustup default nightly
rustup component add rls-preview
rustup component add rust-analysis
rustup component add rust-src
rustup component add rustfmt-preview --toolchain nightly
rustup completions zsh > ~/.zfunc/_rustup

cargo +nightly install racer
cargo install clippy
cargo install cargo-update

# elm
brew install elm
brew install node

# haskell
curl -sSL https://get.haskellstack.org/ | sh
stack install apply-refact hlint stylish-haskell hasktags hoogle hindent

# go
go get -u github.com/golang/dep/cmd/dep
brew install go-delve/delve/delve

# pyenv の設定
pyenv virtualenv 2.7 neovim-2
pyenv shell neovim-2
pip2 install neovim
pyenv virtualenv 3.7.0b2 neovim-3
pyenv shell neovim-3
pip3 install neovim

pip install --user flake8
pip install --user yapf
pip install --user autoflake
pip install --user isort

# php
phpbrew init

# dotnet
brew install Caskroom/cask/dotnet

# scheme
brew install gauche

# jvm familiy
curl -s "https://get.sdkman.io" | bash
