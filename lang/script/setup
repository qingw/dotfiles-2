#!/bin/bash

# rust
rustup self update
rustup update
rustup install nightly
rustup component add rls
rustup component add rust-analysis
rustup component add rust-src
rustup component add rustfmt
rustup component add clippy
rustup completions zsh > ~/.zfunc/_rustup

cargo install racer

# haskell
nix-env --install stack
stack install apply-refact hlint stylish-haskell hasktags hoogle hindent

# elm
nix-env --install nodejs
nix-env --install elm

# go
nix-env --install go
nix-env --install delve

# python
nix-env --install python-2.7.16
nix-env --install python2.7-pip-19.1.1
nix-env --install python3-3.7.4
nix-env --install python3.7-pip-19.1.1

pip3 install pynvim
pip3 install flake8
pip3 install yapf
pip3 install autoflake
pip3 install isort
pip3 install python-language-server
pip3 install black
pip2 install pynvim
pip2 install flake8
pip2 install yapf
pip2 install autoflake
pip2 install isort
pip2 install python-language-server
pip2 install black

# ruby
nix-env --install ruby

# jvm familiy

# yarn
nix-env --install yarn
yarn global add vscode-html-languageserver-bin typescript typescript-language-server
yarn global add prettier
