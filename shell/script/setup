ln -fs ${DOTFILES}/shell/.bash_profile ${HOME}/.bash_profile
ln -fs ${DOTFILES}/shell/.bashrc ${HOME}/.bashrc
ln -fs ${DOTFILES}/shell/.zshenv ${HOME}/.zshenv
ln -fs ${DOTFILES}/shell/.zshrc ${HOME}/.zshrc

if [ ! -e ${HOME}/.zplug ]; then
    curl -sL --proto-redir -all,https https://raw.githubusercontent.com/zplug/installer/master/installer.zsh| zsh
fi

source .zshrc
zplug install

ln -s $HOME/.zplug/repos/sorin-ionescu/prezto $HOME/.prezto

brew install peco
