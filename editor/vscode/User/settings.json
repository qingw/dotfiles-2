{
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,

  // https://qiita.com/y-mattun/items/45776b7e1942edb2f727
  "vim.useSystemClipboard":true,
  "vim.cmdLineInitialColon": true,
  "vim.hlsearch": true,
  "vim.easymotion": true,
  "vim.visualstar": true,
  "vim.useCtrlKeys": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["f", "d"],
      "after": ["<Esc>"],
    },
    {
      "before": ["ctrl+f"],
      "after": [""],
      "commands": ["extension.vim_right"],
    },
    {
      "before": ["ctrl+b"],
      "after": [""],
      "commands": ["extension.vim_left"],
    },
    {
      "before": ["ctrl+n"],
      "after": [""],
      "commands": ["extension.vim_down"],
    },
  ],

  // elm
  "[elm]": {
    "editor.formatOnSave": true,
    "editor.formatOnSaveTimeout": 1500,
  },
}